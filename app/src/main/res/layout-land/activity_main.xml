<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/landscape"
            android:textColor="#0000FF"/>
        <EditText
            android:id="@+id/edit_cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_landscape"
            android:hint="@string/geben_sie_einen_ort_ein"
            android:autofillHints=""
            android:inputType="text" />
        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_cityname"/>
        <TextView
            android:id="@+id/tv_buffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/edit_cityname"/>
        <TextView
            android:id="@+id/tv_buffer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/edit_cityname"
            android:layout_below="@+id/tv_buffer"/>
        <Button
            android:id="@+id/btn_messung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/edit_cityname"
            android:layout_below="@+id/tv_buffer2"
            android:text="@string/messung"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>